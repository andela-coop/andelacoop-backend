{
  "name": "andelacoop-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/andela-coop/andelacoop-backend.git",
  "author": "Olarewaju Temtope Albert <tmtpalbert@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "build": "./node_modules/.bin/babel src --out-dir dist",
    "start:dev": "nodemon --exec babel-node src/index.js",
    "test": "NODE_ENV='test' && mocha --require @babel/register src/**/**.test.js --exit",
    "test:dev": "NODE_ENV='test' && yarn db:reseed && mocha --require @babel/register src/**/**.test.js --exit",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:migrate:undo": "./node_modules/.bin/sequelize db:migrate:undo:all",
    "db:roll:migrate": "./node_modules/.bin/sequelize db:migrate:undo && ./node_modules/.bin/sequelize db:migrate",
    "db:reseed": "yarn run db:roll:migrate && ./node_modules/.bin/sequelize db:seed:all"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.1",
    "nodemon": "^1.19.3",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "morgan": "^1.9.1",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.19.2",
    "sequelize-cli": "^5.5.1"
  }
}
